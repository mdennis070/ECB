<SaveGameScreen>:
	id: screen_id_save

	BaseScreen:
	
		StatusBar:
			Label:

			QuitIcon:

		ElementBox:
			spacing: 10

			TextInput:
				id: textbox_filename
				text: "date"
				font_size: 30
				multiline: False
				size_hint_y: 0.25

			Button:
				text: "Save Game"
				font_size: "30sp"
				size_hint_y: 0.4
				on_release: root.save_game(textbox_filename.text)

			Label:
