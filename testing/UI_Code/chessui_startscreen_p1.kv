<SettingLabel@Label>:
	id: label_text
	text_size: self.size
	valign: "middle"
	halign: "left"

<StartScreen_p1>:
	id: screen_id_startP1
	
	BaseScreen:
		
		StatusBar:

		ElementBox:
			padding: 50, 50
			
			GridLayout:
				cols: 2
				spacing: 5

				SettingLabel:
					text: "Play as"

				BoxLayout:
					orientation: "horizontal"
					size_hint_y: 0.1
		
					ToggleButton:
						id: p1_color_white
						group: "p1_color"
						text: "White"
						allow_no_selection: False

					ToggleButton:
						id: p1_color_black
						group: "p1_color"
						text: "Black"
						allow_no_selection: False
						
				SettingLabel:
					text: "Difficulty\n(Level: {})".format(str(slide_ai_diff.value))

				Slider:
					id: slide_ai_diff
					size_hint_x: 2.5
					size_hint_y: 0.1
					min: 1
					max: 8
					step: 1
				
				SettingLabel:
					text: "Tutor"

				ToggleButton:
					id: tutor_on
					size_hint_y: 0.1
					text: "Enabled" if self.state == "down" else "Disabled"

