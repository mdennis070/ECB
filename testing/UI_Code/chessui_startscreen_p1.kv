					text: "Game Timer\n(No Time Limit)" if slide_game_timer.value == 0 else "Game Timer\n({} min)".format(str(int(slide_game_timer.value)))
			
				Slider:
					id: slide_game_timer
					size_hint_y: 0.1
					min: 0
					max: 60
					step: 1
				
				SettingLabel:
					text: "Move Timer\n(No Time Limit)" if slide_move_timer.value == 0 else "Move Timer\n({} sec)".format(str(int(slide_move_timer.value)))

